<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="azk_acounting_payment_currency_batch_form_inherit" model="ir.ui.view">
		<field name="name">azk_acounting_payment_currency.account.batch.payment.form.inherit</field>
		<field name="model">account.batch.payment</field>
		<field name="inherit_id" ref="account_batch_payment.view_batch_payment_form" />
		<field name="arch" type="xml">
			<xpath expr="//field[@name='payment_ids']/form/group/group/field[@name='partner_id']" position="after">
				<label for="account_amount"/>
	            <div>
	                <field name="account_amount" class="oe_inline" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
	                <field name="account_currency_id" options="{'no_create': True}" groups="base.group_multi_currency" class="oe_inline" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
	            </div>
			</xpath>
		</field>
	</record>
</odoo>
